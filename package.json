{
  "name": "test-anywhere",
  "version": "0.8.50",
  "description": "A JavaScript testing framework that is built on top of built-in testing frameworks of Bun, Deno, and Node.js",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "scripts": {
    "test": "node --test tests/",
    "test:node": "node --test tests/",
    "test:bun": "bun test",
    "test:deno": "deno test --allow-read",
    "coverage": "node --test --experimental-test-coverage tests/",
    "coverage:node": "node --test --experimental-test-coverage tests/",
    "coverage:bun": "bun test --coverage",
    "coverage:deno": "deno test --coverage=coverage --allow-read && deno coverage coverage",
    "coverage:check": "node scripts/check-node-coverage.mjs",
    "coverage:check:node": "node scripts/check-node-coverage.mjs",
    "coverage:check:bun": "node scripts/check-bun-coverage.mjs",
    "coverage:check:deno": "node scripts/check-deno-coverage.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:file-size": "node scripts/check-file-size.mjs",
    "check": "npm run lint && npm run format:check && npm run check:file-size",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main"
  },
  "keywords": [
    "testing",
    "test",
    "bun",
    "deno",
    "node",
    "framework"
  ],
  "author": "",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/link-foundation/test-anywhere"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
